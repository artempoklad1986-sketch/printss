            <table id='ordersTable'>
              <thead>
                <tr>
                  <th>–í—Ä–µ–º—è</th>
                  <th>–¢–∏–ø</th>
                  <th>–ö–ª–∏–µ–Ω—Ç</th>
                  <th>–ó–∞–∫–∞–∑</th>
                  <th>–°—É–º–º–∞</th>
                  <th>–°—Ç–∞—Ç—É—Å</th>
                  <th>–î–µ–π—Å—Ç–≤–∏—è</th>
                </tr>
              </thead>
              <tbody>
                <?php
                $lines = array_slice(array_reverse($lines), 0, 200);
                foreach($lines as $line){
                  if(!preg_match('~^$$(.+?)$$ (.+)$~u', $line, $m)) continue;
                  $ts = $m[1];
                  $j = json_decode($m[2], true);
                  if (!$j) continue;

                  $type = $j['type'] ?? 'service';
                  $typeIcon = $type === 'cart' ? 'üõí' : ($type === 'callback' ? 'üìû' : ($type === 'photo_constructor' ? 'üì∏' : 'üìã'));
                  $orderId = $j['id'] ?? 'unknown';

                  echo '<tr data-type="'.$type.'" data-order-id="'.esc($orderId).'">';
                  echo '<td><small>'.esc(date('d.m H:i', strtotime($ts))).'</small></td>';
                  echo '<td>'.$typeIcon.'</td>';
                  echo '<td><strong>'.esc($j['name'] ?? '').'</strong><br><small>'.esc($j['phone'] ?? '').'</small></td>';

                  if ($type === 'cart') {
                    $itemCount = count($j['items'] ?? []);
                    echo '<td>–¢–æ–≤–∞—Ä—ã ('.$itemCount.' —à—Ç)</td>';
                    echo '<td><strong>'.number_format($j['total_price'] ?? 0, 0, ',', ' ').' ‚ÇΩ</strong></td>';
                  } elseif ($type === 'photo_constructor') {
                    $photoCount = $j['photo_count'] ?? 0;
                    echo '<td>–§–æ—Ç–æ ('.$photoCount.' —à—Ç)<br><small>'.esc($j['size'] ?? '').'</small></td>';
                    echo '<td><strong>'.number_format($j['estimated_price'] ?? 0, 0, ',', ' ').' ‚ÇΩ</strong></td>';
                  } elseif ($type === 'callback') {
                    echo '<td>–û–±—Ä–∞—Ç–Ω—ã–π –∑–≤–æ–Ω–æ–∫</td>';
                    echo '<td>‚Äî</td>';
                  } else {
                    echo '<td>'.esc($j['service'] ?? '').'</td>';
                    echo '<td>'.esc($j['price'] ?? '‚Äî').'</td>';
                  }

                  $status = $j['status'] ?? 'new';
                  $paymentMethod = $j['payment_method'] ?? '';

                  if ($status === 'paid') {
                    echo '<td><span class="badge badge-success">–û–ø–ª–∞—á–µ–Ω</span></td>';
                  } elseif ($paymentMethod === 'online') {
                    echo '<td><span class="badge badge-warning">–û–∂–∏–¥–∞–µ—Ç –æ–ø–ª–∞—Ç—ã</span></td>';
                  } else {
                    echo '<td><span class="badge">–ù–æ–≤—ã–π</span></td>';
                  }

                  echo '<td><button class="btn2" onclick="viewOrder(\''.esc($orderId).'\')">üëÅÔ∏è</button></td>';
                  echo '</tr>';
                }
                ?>
              </tbody>
            </table>
          </div>
        </div>
