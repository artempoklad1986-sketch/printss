            </div>
          </div>

          <div class='orders-filter'>
            <button class='filter-btn active' onclick='filterOrders("all")'>Все (<?=$stats['total']?>)</button>
            <button class='filter-btn' onclick='filterOrders("cart")'>🛒 Товары (<?=$stats['cart_orders']?>)</button>
            <button class='filter-btn' onclick='filterOrders("photo_constructor")'>📸 Фото (<?=$stats['photo_orders']?>)</button>
            <button class='filter-btn' onclick='filterOrders("service")'>📋 Услуги (<?=$stats['service_orders']?>)</button>
            <button class='filter-btn' onclick='filterOrders("callback")'>📞 Звонки (<?=$stats['callback_requests']?>)</button>
          </div>

          <div style='overflow-x:auto'>
            <table id='ordersTable'>
              <thead>
                <tr>
                  <th>Время</th>
                  <th>Тип</th>
                  <th>Клиент</th>
                  <th>Заказ</th>
                  <th>Сумма</th>
                  <th>Статус</th>
                  <th>Действия</th>
                </tr>
              </thead>
              <tbody>
                <?php
                $lines = @file($ordersLog, FILE_IGNORE_NEW_LINES|FILE_SKIP_EMPTY_LINES) ?: [];
                $lines = array_slice(array_reverse($lines), 0, 200);

                foreach($lines as $line){
                  if(!preg_match('~^$$(.+?)$$ (.+)$~u', $line, $m)) continue;
                  $ts = $m[1];
                  $j = json_decode($m[2], true);
                  if (!$j) continue;

                  // Пропускаем служебные записи
                  if (isset($j['action']) && $j['action'] === 'status_update') continue;
                  if (isset($j['updated_order'])) continue;

                  $type = $j['type'] ?? 'service';
                  $typeIcon = $type === 'cart' ? '🛒' : ($type === 'callback' ? '📞' : ($type === 'photo_constructor' ? '📸' : '📋'));
                  $orderId = $j['id'] ?? 'unknown';
                  $status = $j['status'] ?? 'new';

                  echo '<tr data-type="'.esc($type).'" data-order-id="'.esc($orderId).'" data-status="'.esc($status).'">';
                  echo '<td><small>'.esc(date('d.m H:i', strtotime($ts))).'</small></td>';
                  echo '<td>'.$typeIcon.'</td>';
                  echo '<td>';
                  echo '<strong>'.esc($j['name'] ?? '—').'</strong><br>';
                  echo '<small>'.esc($j['phone'] ?? '—').'</small>';
                  if (!empty($j['email'])) echo '<br><small>'.esc($j['email']).'</small>';
                  echo '</td>';

                  // Описание заказа
                  echo '<td>';
                  if ($type === 'cart') {
                    $itemCount = count($j['items'] ?? []);
                    echo 'Товары: '.$itemCount.' шт<br>';
                    if (!empty($j['items'])) {
                      foreach (array_slice($j['items'], 0, 2) as $item) {
                        echo '<small>• '.esc($item['name'] ?? '').' × '.($item['quantity'] ?? 1).'</small><br>';
                      }
                      if (count($j['items']) > 2) echo '<small>... и еще '.(count($j['items']) - 2).'</small>';
                    }
                  } elseif ($type === 'photo_constructor') {
                    $photoCount = $j['photo_count'] ?? 0;
                    echo 'Фотопечать: '.$photoCount.' фото<br>';
                    echo '<small>Размер: '.esc($j['size'] ?? '—').'</small><br>';
                    echo '<small>Бумага: '.esc($j['paper'] ?? '—').'</small><br>';
                    echo '<small>Тираж: '.esc($j['qty_per_photo'] ?? 1).' на фото</small>';
                  } elseif ($type === 'callback') {
                    echo 'Обратный звонок<br>';
                    if (!empty($j['preferred_time'])) echo '<small>Время: '.esc($j['preferred_time']).'</small>';
                  } else {
                    echo esc($j['service'] ?? '—').'<br>';
                    if (!empty($j['comment'])) echo '<small>'.esc(mb_substr($j['comment'], 0, 50)).'...</small>';
                  }
                  echo '</td>';

                  // Сумма
                  echo '<td>';
                  if (isset($j['total_price'])) {
                    echo '<strong>'.number_format($j['total_price'], 0, ',', ' ').' ₽</strong>';
                  } elseif (isset($j['estimated_price'])) {
                    echo '<strong>'.number_format($j['estimated_price'], 0, ',', ' ').' ₽</strong>';
                  } elseif (!empty($j['price']) && $j['price'] !== '—') {
                    echo '<strong>'.esc($j['price']).'</strong>';
                  } else {
                    echo '<span class="muted">—</span>';
                  }
                  echo '</td>';

                  // Статус с возможностью изменения
                  echo '<td>';
                  $statusLabels = [
                    'new' => ['Новый', 'badge-info'],
                    'in_progress' => ['В работе', 'badge-warning'],
                    'completed' => ['Готово', 'badge-success'],
                    'cancelled' => ['Отменен', 'badge-danger'],
                    'paid' => ['Оплачен', 'badge-success'],
                    'pending_payment' => ['Ожидает оплаты', 'badge-warning']
                  ];

                  $statusInfo = $statusLabels[$status] ?? ['Неизвестно', 'badge'];
                  echo '<span class="badge '.$statusInfo[1].'">'.$statusInfo[0].'</span>';

                  $paymentMethod = $j['payment_method'] ?? '';
                  if ($paymentMethod === 'online') {
                    echo '<br><small class="muted">💳 Онлайн</small>';
                  }
                  echo '</td>';

                  // Действия
                  echo '<td>';
                  echo '<button class="btn2" style="padding:4px 8px;font-size:11px;margin:2px" onclick="viewOrderDetails(\''.esc($orderId).'\')"">👁️ Детали</button>';
                  echo '<button class="btn2" style="padding:4px 8px;font-size:11px;margin:2px" onclick="editOrderStatus(\''.esc($orderId).'\', \''.esc($status).'\')">✏️ Статус</button>';

                  // Кнопка скачивания фото для заказов фотоконструктора
                  if ($type === 'photo_constructor') {
                    echo '<button class="btn2" style="padding:4px 8px;font-size:11px;margin:2px" onclick="downloadConstructorPhotos(\''.esc($orderId).'\')">📥 Фото</button>';
                  }

                  if (!empty($j['name']) && !empty($j['phone'])) {
                    echo '<button class="btn2" style="padding:4px 8px;font-size:11px;margin:2px" onclick="viewCustomer(\''.esc(preg_replace('/[^0-9]/', '', $j['phone'])).'\')">👤 CRM</button>';
                  }
                  echo '</td>';
                  echo '</tr>';
                }
                ?>
              </tbody>
            </table>
          </div>
        </div>

        <!-- База клиентов -->
        <div class='card'>
          <h3>👥 База клиентов (CRM)</h3>
          <div style='overflow-x:auto'>
            <table>
              <thead>
                <tr>
                  <th>Клиент</th>
                  <th>Контакты</th>
                  <th>Заказов</th>
                  <th>Потрачено</th>
                  <th>Последний контакт</th>
                  <th>Теги</th>
                  <th>Действия</th>
                </tr>
              </thead>
              <tbody>
                <?php
                // Сортируем клиентов по последнему контакту
                usort($customers, function($a, $b) {
                  return strtotime($b['last_contact'] ?? '1970-01-01') - strtotime($a['last_contact'] ?? '1970-01-01');
                });

                foreach (array_slice($customers, 0, 50) as $customer):
                ?>
                  <tr>
                    <td>
                      <strong><?=esc($customer['name'])?></strong><br>
                      <small class='muted'>ID: <?=esc($customer['id'])?></small>
                    </td>
                    <td>
                      <small><?=esc($customer['phone'])?></small><br>
                      <?php if (!empty($customer['email'])): ?>
                        <small><?=esc($customer['email'])?></small>
                      <?php endif; ?>
                    </td>
                    <td><strong><?=($customer['orders_count'] ?? 0)?></strong></td>
                    <td><strong><?=number_format($customer['total_spent'] ?? 0, 0, ' ', ' ')?> ₽</strong></td>
                    <td><small><?=esc(date('d.m.Y H:i', strtotime($customer['last_contact'] ?? '1970-01-01')))?></small></td>
                    <td>
